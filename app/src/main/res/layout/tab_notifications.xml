<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/notifications_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#ffffff"
                android:textSize="@dimen/top_buttonnavigation_title"
                android:text="朋友私信"
                android:textColor="@color/themeColor" />

            <Button
                android:id="@+id/notifications_friend_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/themeColor" />
            <Button
                android:id="@+id/notifications_friend_line_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/themeColor" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/notifications_system"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="#ffffff"
                android:textSize="@dimen/top_buttonnavigation_title"
                android:text="系统通知" />

            <Button
                android:id="@+id/notifications_system_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorWhite" />
            <Button
                android:id="@+id/notifications_system_line_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/NotificationsFalseGray" />
        </LinearLayout>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/notifications_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>