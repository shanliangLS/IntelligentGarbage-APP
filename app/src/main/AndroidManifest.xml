            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"></activity>
        <activity android:name=".account.IntegralRuleActivity"></activity>
        <activity android:name=".account.CallbackActivity"></activity>
        <activity android:name=".account.SettingsActivity"></activity>
        <activity android:name=".notifications.NotificationNoticeMessage"></activity>
        <activity android:name=".home.Recommend0Activity"></activity>
        <activity android:name=".home.Recommend1Activity"></activity>
        <activity android:name=".home.Recommend2Activity"></activity>
        <activity android:name=".home.HomeRankListActivity"></activity>
        <activity android:name=".weather.WeatherActivity"></activity>
        <activity android:name=".weather.MainActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".dashboard.info.GoodInfoActivity" />
        <activity android:name=".notifications.ImportantActivity"/>
        <activity android:name=".notifications.GoodActivity"/>

        <service
            android:name=".service.AutoUpdateService"
            android:enabled="true"
            android:exported="true"></service>

    </application>

</manifest>